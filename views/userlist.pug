extends layout.pug

block content
    script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.js')
    script(src='/frontendjs/userlist.js')
    table
        tr
            th User Id
            th User First Name
            th User Last Name
            th User Email
            th User Age
            
             
        each user in users
            tr
                td #{user.userid}
                td #{user.first_name}
                td #{user.last_name}
                td #{user.email}
                td #{user.age}
                td
                    div
                        button(id="edit", onclick="editUserInfo(event)") Edit
                        button(id="delete", onclick="deleteUserInfo(event)") Delete
                        button(id="save", onclick="saveUserInfo(event)") Save User
    br
    br
    
    a(href="/userlist") Show Ascending By Last Name
    br
    br
    a(href="/userlist?descending=true") Show Descending By Last Name
    br
    br
    input(id="search")
    button(onclick="searchByLastName(event)") Search For User
    


